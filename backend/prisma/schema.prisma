// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "app/generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  rooms     Room[] @relation("UserRooms")
}

model Room {
  id          Int      @id @default(autoincrement())
  roomId      String   @unique @db.VarChar(8)
  userId      Int?
  user        User?    @relation("UserRooms", fields: [userId], references: [id], onDelete: Cascade)
  createdBy   String   // Teacher/creator name
  iconLayout  Json     // [{ id,type,x,y }, ...]
  questions   Json     // [{ itemId, question, expectedAnswers:[] }, ...]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}